RewriteEngine On

RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

RewriteRule ^auth/send-otp$ auth.php [L]
RewriteRule ^auth/verify-otp$ auth.php [L]
RewriteRule ^auth/resend-otp$ auth.php [L]
RewriteRule ^auth/debug$ auth.php [L]

RewriteRule ^api/(.*)$ index.php [QSA,L]

RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

RewriteRule ^ index.html [L]